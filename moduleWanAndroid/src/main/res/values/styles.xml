<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TabLayout style-->
    <style name="TabLayoutStyle" parent="android:Widget">

        <item name="android:background">@null</item>
        <item name="tabIconTint">@null</item>
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabIndicatorAnimationDuration">300</item>
        <item name="tabIndicatorColor">@color/uikit_accent_primary</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicator">@drawable/tabs_default_indicator</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TabsTextAppearance</item>
        <item name="tabTextColor">@null</item>
        <item name="tabRippleColor">@color/uikit_accent_primary_pressed</item>
        <item name="tabUnboundedRipple">false</item>

        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="TabsTextAppearance" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/tabs_text_color_selector</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>