<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BottomNavigationView style-->
    <style name="BottomNavStyle">
        <item name="elevation">@dimen/design_bottom_navigation_elevation</item>
        <item name="itemIconSize">@dimen/design_bottom_navigation_icon_size</item>
        <item name="labelVisibilityMode">auto</item>

        <item name="enforceTextAppearance">false</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@color/uikit_bg_basic</item>
        <item name="itemBackground">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/bottom_nav_item_tint</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextStyle</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextStyle</item>
        <item name="itemTextColor">@color/bottom_nav_item_tint</item>
        <item name="itemRippleColor">@color/bottom_nav_ripple_color</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/uikit_text_secondary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0333333333</item>
    </style>

</resources>